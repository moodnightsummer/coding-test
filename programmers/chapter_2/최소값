// my code
function solution(n) {
  let answer = arr[0];

  for (let i = 1; i < n.length; i++) {
    answer = answer < n[i] ? answer : n[i];
  }

  return answer;
}

let arr = [5, 7, 1, 3, 2, 9, 11];
console.log(solution(arr));

// new code
function solution2(n) {
  // slice 메서드로 새 객체에 깊은 복사를 하여 사용한다.
  const _n = n.slice();

  let answer = _n.sort((a, b) => {
    return a - b;
  });

  console.log(n);
  return answer[0];
}

console.log(solution2(arr));
